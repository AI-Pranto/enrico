<?xml version="1.0"?>
<stream>
  <driver_transport>openmc</driver_transport>
  <driver_heatfluids>surrogate</driver_heatfluids>
  <communication>overlapping</communication>
  <power>820.0</power>
  <pressure_bc>12.7553</pressure_bc>
  <max_timesteps>1</max_timesteps>
  <max_picard_iter>4</max_picard_iter>
  <heat_surrogate>
    <pellet_radius>0.406</pellet_radius>
    <clad_inner_radius>0.414</clad_inner_radius>
    <clad_outer_radius>0.475</clad_outer_radius>
    <fuel_rings>20</fuel_rings>
    <clad_rings>5</clad_rings>
    <pin_pitch>1.1</pin_pitch>
    <n_pins_x>1</n_pins_x>
    <n_pins_y>1</n_pins_y>
    <mass_flowrate>1.0</mass_flowrate>
    <inlet_temperature>350.0</inlet_temperature>
    <z>0.0 0.5 1.0 1.5 2.0 2.5 3.0 3.5 4.0 4.5 5.0 5.5 6.0 6.5 7.0 7.5 8.0 8.5 9.0 9.5 10.0</z>
    <verbosity>high</verbosity>
    <viz filename="openmc_heat_surrogate">
      <iterations>final</iterations>
      <resolution>50</resolution>
      <regions>fuel</regions>
    </viz>
  </heat_surrogate>
</stream>
